<div ng-if="loading" class="md-padding" layout="row" layout-align="center center">
  <md-progress-circular md-mode="indeterminate"></md-progress-circular>
</div>

<div ng-hide="loading">
  <h2 class="md-headline">{{ platform.name }}</h2>

  <div class="white md-whiteframe-z1">
    <md-list class="unpadded">
      <md-list-item class="md-2-line">
        <md-icon md-svg-icon="action:event"></md-icon>
        <div class="md-list-item-text">
          <p>Carte modifi√©e le {{ platform.lastActivity }}</p>
        </div>
         <md-divider></md-divider>
      </md-list-item>

      <md-list-item class="md-2-line">
        <md-icon md-svg-icon="mdi:trello"></md-icon>
        <div class="md-list-item-text">
          <p>{{ platform.status }}</p>
        </div>
         <md-divider></md-divider>
      </md-list-item>

      <md-list-item class="md-2-line">
        <md-icon md-svg-icon="action:assignment_ind"></md-icon>
        <div class="md-list-item-text">
          <p>{{ platform.contacts }}</p>
        </div>
      </md-list-item>
    </md-list>
  </div>

  <div layout="row">
    <div flex>
      <h2 class="md-headline" flex>Analyses d'URLs</h2>
    </div>
    <md-button ng-click="toggleSplitView()">{{ split ? 'Vue simple' : 'Scinder la vue' }}</md-button>
  </div>

  <div class="md-margin">
    <md-progress-linear md-mode="{{ saving ? 'indeterminate' : '' }}"></md-progress-linear>
  </div>

  <div layout="row" ng-show="analyses.length" ng-class="{ splitted: split }">
    <ez-analyzer ez-analyses="analyses" ez-authorized="auth.isAuthorized()" flex></ez-analyzer>
    <ez-analyzer ez-analyses="analyses" ez-authorized="auth.isAuthorized()" flex ng-if="split"></ez-analyzer>
  </div>
</div>
